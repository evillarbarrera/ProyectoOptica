<%= link_to 'Nueva Orden', new_header_order_of_work_path , class:"btn btn-success"%></th>

    </tr>


  <tbody>
    <% @header_order_of_works.each do |header_order_of_work| %>
      <tr>
        <td><%= header_order_of_work.user %></td>
        <td><%= header_order_of_work.fecha_ingres %></td>
        <td><%= header_order_of_work.fecha_entrega %></td>
        <td><%= header_order_of_work.horas %></td>
        <td><%= header_order_of_work.acuenta %></td>
        <td><%= header_order_of_work.saldo %></td>
        <td><%= header_order_of_work.total %></td>
        <td><%= header_order_of_work.flag_entregado %></td>

