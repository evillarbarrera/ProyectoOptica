<div  class="form-style-9">
 
   <table  class="table">

    <tr>
      <th>User</th>
      <th>Fecha ingres</th>
      <th>Fecha entrega</th>
      <th>Horas</th>
      <th>Acuenta</th>
      <th>Saldo</th>
      <th>Total</th>
      <th>Flag entregado</th>
      <th colspan="3"></th>
